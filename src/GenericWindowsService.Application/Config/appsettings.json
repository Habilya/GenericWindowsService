{
	/*
		Scheduling convention

		* * * * * *
		- - - - - -
		| | | | | |
		| | | | | +--- day of week (0 - 6) (Sunday=0)
		| | | | +----- month (1 - 12)
		| | | +------- day of month (1 - 31)
		| | +--------- hour (0 - 23)
		| +----------- min (0 - 59)
		+------------- sec (0 - 59)

		0 0 12 * *`/2 Mon (meaning running 12:00 PM on Monday of every other month, starting with January) (remove the `)
		*`/25 * * * * * (meaning running every 25 seconds) (remove the `)
	*/
	"ServiceConfiguration": {
		"ServiceName": "Generic Windwos Service (supports all sort of automation)",
		"RunEveryMS": 5000,
		"MaxDegreeOfParallelism": 5,
		"IsNetworkPingEnabled": false,
		"NetworkPathToPing": "",
		// A  good place to add db connections into config here
		"AdHocFields": {
			// Add system level custom configurations, that may be common for multiple processes
		},
		"ScheduledProcesses": [
			{
				"ProcessLabel": "Some Process",
				"ProcessCodeName": "GenericProcess",
				"IsNetworkDependant": false,
				"Schedule": "*/25 * * * * *",
				"AdHocFields": {
					"field1": "aaa",
					"field2": "bbb"
					/*
					TODO: possibility of adding custom lists not just key/Value pairs as adhoc fields
					"field2": {
						"subfield1": "bbb",
						"subfield2": "ccc"
					}
					*/
				}
			}
		]
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
		"MinimumLevel": {
			"Default": "Verbose"
		},
		"Enrich": [
			"FromLogContext"
		],
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
					"outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss zzz} {Level:u5}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
				}
			},
			{
				"Name": "File",
				"Args": {
					"rollingInterval": "Day",
					"path": "logs/GenericWindowsService_.log",
					"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz} [{Level}] {Message}{NewLine}{Exception}",
					"restrictedToMinimumLevel": "Information"
				}
			}
		]
	}
}
